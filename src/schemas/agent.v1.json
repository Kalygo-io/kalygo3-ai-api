{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kalygo.example/schemas/agent.schema.json",
  "title": "Agent",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "config"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable agent name."
    },
    "config": {
      "$ref": "https://kalygo.example/schemas/agent-config.schema.json",
      "description": "Agent configuration containing schema, version, and data (systemPrompt, knowledgeBases, etc.)."
    }
  },
  "examples": [
    {
      "name": "AI school agent",
      "config": {
        "schema": "agent_config",
        "version": 1,
        "data": {
          "systemPrompt": "It is useful for finding out information about AI school",
          "knowledgeBases": [
            {
              "provider": "pinecone",
              "index": "all-minilm-l6-v2-384-dims",
              "namespace": "aisalon_miami",
              "description": "Information about AI school."
            }
          ]
        }
      }
    }
  ]
}