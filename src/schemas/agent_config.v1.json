{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kalygo.example/schemas/agent-config.schema.json",
  "title": "Agent Config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "version",
    "data"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "agent_config"
    },
    "version": {
      "type": "integer",
      "const": 1
    },
    "data": {
      "type": "object",
      "required": [
        "knowledgeBases"
      ],
      "properties": {
        "knowledgeBases": {
          "type": "array",
          "minItems": 1,
          "description": "One or more knowledge base bindings used by the agent.",
          "items": {
            "$ref": "#/$defs/knowledgeBase"
          }
        }
      }
    }
  },
  "$defs": {
    "knowledgeBase": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "provider",
        "index",
        "namespace"
      ],
      "properties": {
        "provider": {
          "type": "string",
          "minLength": 1,
          "description": "Knowledge base provider identifier (e.g., 'pinecone')."
        },
        "index": {
          "type": "string",
          "minLength": 1,
          "description": "Provider index / collection name."
        },
        "namespace": {
          "type": "string",
          "minLength": 1,
          "description": "Provider namespace / partition key."
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "What this knowledge base contains."
        }
      }
    }
  }
}