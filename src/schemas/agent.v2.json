{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kalygo.example/schemas/agent-v2.schema.json",
  "title": "Agent v2",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "config"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable agent name."
    },
    "description": {
      "type": "string",
      "description": "Optional description of what the agent does."
    },
    "config": {
      "type": "object",
      "required": [
        "schema",
        "version",
        "data"
      ],
      "properties": {
        "schema": {
          "type": "string",
          "const": "agent_config"
        },
        "version": {
          "type": "integer",
          "const": 2
        },
        "data": {
          "type": "object",
          "required": [
            "systemPrompt"
          ],
          "properties": {
            "systemPrompt": {
              "type": "string",
              "minLength": 1
            },
            "tools": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "description": "Agent configuration v2 containing schema, version, and data (systemPrompt, tools, etc.)."
    }
  },
  "examples": [
    {
      "name": "Documentation Assistant",
      "description": "Helps users find information in technical documentation",
      "config": {
        "schema": "agent_config",
        "version": 2,
        "data": {
          "systemPrompt": "You are a technical documentation assistant. Search the knowledge base when users ask questions about the product.",
          "tools": [
            {
              "type": "vectorSearch",
              "provider": "pinecone",
              "index": "tech-docs",
              "namespace": "api-reference",
              "description": "API documentation and code examples",
              "topK": 10
            }
          ]
        }
      }
    },
    {
      "name": "Simple Chat Bot",
      "config": {
        "schema": "agent_config",
        "version": 2,
        "data": {
          "systemPrompt": "You are a friendly and helpful AI assistant."
        }
      }
    }
  ]
}
